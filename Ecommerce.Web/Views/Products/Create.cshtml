@model Ecommerce.Models.ViewModels.Web.Product.ProductCreateVm

@{
    Layout= "_MyLayout" ;
}
    <div class="card-title">
        <h2>Create a new product.</h2>
    </div>
<form method="post">
        <div class="card  col-md-5 col-sm-5">
            <div class="form-group row">
                <label asp-for="Name">Name</label>                
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Code">Code</label>               
                <input asp-for="Code" type="text" class="form-control" />
            </div>
            <div class="form-group row">
                <label asp-for="Price">Price</label>               
                <input asp-for="Price" type="text" />
            </div>
            <div class="form-group row">
                <label asp-for="WarehouseLocation">WH Location</label>                
                <input asp-for="WarehouseLocation" type="text" class="form-control" />
            </div>
            <div class="form-group row">
                <label asp-for="ShopId">Shop</label>
                <select asp-for="ShopId" asp-items="ViewBag.shops">
                    <option>---Select---</option>
                </select>
            </div><div class="form-group row">

                <input asp-for="Name" type="submit" value="Create" class="form-control" />
            </div>
        </div>
    </form>
